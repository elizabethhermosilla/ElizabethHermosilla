
@model List<WebApplication.Models.LoginPanel>
    <div class=" container">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Contraseña</th>
                    <th>Acción</th>
                </tr>
            </thead>
            <tbody>
                @for (int i=0; i<Model.Count(); i++)
                {
                <tr>
                    <td>@Model[i].Username</td>
                    <td>@Model[i].Password</td>
                    <td>
                        <a href="@Url.Action("Borrar", new { id = Model[i].ID })" ><i class="glyphicon glyphicon-trash"></i></a>
                        <a href="@Url.Action("Editar", new { id = Model[i].ID })" ><i class="glyphicon glyphicon-edit"></i> </a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>


